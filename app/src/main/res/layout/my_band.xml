<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorMain"
        android:fitsSystemWindows="true">
        <Button
            android:id="@+id/back_band"
            android:background="@drawable/icon_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:text=""/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="我的手环      "
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/heart"
        android:scaleType="centerCrop"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="250dp"
        android:background="#EEEEEE">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFFFFF"/>
            <TextView
                android:id="@+id/band_tv0"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="YYYYY"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_marginRight="60dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="60dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFFFFF"/>
            <TextView
                android:id="@+id/band_tv1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="YYYYY"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_marginRight="60dp"/>
            <Switch
                android:id="@+id/band_choice"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/band_main"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="120dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:text="手环连接状态"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:background="#FFFFFF"/>
                <TextView
                    android:id="@+id/state_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:gravity="right|center_vertical"
                    android:paddingRight="20dp"
                    android:text="手环未连接"
                    android:textSize="16sp"
                    android:background="#FFFFFF"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="60dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:text="心率监测"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:background="#FFFFFF"/>
                <TextView
                    android:id="@+id/heart_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:gravity="right|center_vertical"
                    android:paddingRight="20dp"
                    android:text="____次/分"
                    android:textSize="16sp"
                    android:background="#FFFFFF"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/band_text"
            android:textColor="@color/colorMain"
            android:lineSpacingMultiplier="1.2"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="235dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/temp_tv"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="手环温度："
        android:textSize="18sp"
        android:background="@drawable/text_band"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"/>




    <TextView
        android:id="@+id/reflex_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=""
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/execute_btn"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:text="启用手环"
            android:textColor="#29B6F6"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_margin="2dp"
            android:background="@drawable/shape2"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/start_btn"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:text="开启本功能"
            android:textColor="#29B6F6"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_margin="2dp"
            android:background="@drawable/shape2"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>

</RelativeLayout>