<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:orientation="vertical"
    android:id="@+id/main_show">

    <com.tencent.tencentmap.mapsdk.map.MapView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:id="@+id/bmapView"
        android:clickable="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorMain"
        android:text="                 "/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="vertical"
        android:background="#eeeeee">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">
            <Button
                android:id="@+id/information_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="无法连接服务器，请检查网络 "
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="60dp"
                android:padding="5dp"
                android:background="@drawable/card_shape"
                android:visibility="visible"/>
            <Button
                android:id="@+id/report_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="举报"
                android:layout_alignParentRight="true"
                android:layout_marginRight="55dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/card_shape"
                android:scaleType="fitXY"
                android:visibility="invisible"/>
            <ImageButton
                android:id="@+id/phone_sos"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_phone_green_100"
                android:scaleType="fitXY"
                android:visibility="invisible"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="参与救助的人员如下："
            android:textSize="16dp"
            android:gravity="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:visibility="invisible"/>
            </ScrollView>
            <TextView
                android:id="@+id/no_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="暂无施救人员……"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="match_parent"
                        android:text="参与救助"
                        android:textColor="#29B6F6"
                        android:textSize="18sp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/showmap_btn"
                        android:visibility="invisible"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/btn2"
                        android:layout_width="0dp"
                        android:layout_weight="0"
                        android:layout_height="match_parent"
                        android:text="参与救助"
                        android:textColor="#29B6F6"
                        android:textSize="18sp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/showmap_btn"
                        android:visibility="invisible"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/btn3"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="match_parent"
                        android:text="参与救助"
                        android:textColor="#29B6F6"
                        android:textSize="18sp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/showmap_btn"
                        android:visibility="invisible"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>